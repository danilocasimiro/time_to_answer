<% flash.each do |key, value| %>
  <div class="flash <%= key %>"><%= value %></div>
<% end %>


      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h1>LOGIN DO USUARIOOOO</h1>
              
      
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Insira o seu email", required: true %>
              </div>

              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, class: "form-control", placeholder: "Insira sua senha", required: true %>
              </div>

              <div>
                 <%= f.submit "Log in", class: "btn btn-default submit" %>
              </div>

               <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            <% end %>
          </section>
        </div>
      </div>
    </div>